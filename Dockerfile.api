FROM python:3.11-slim
WORKDIR /app
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt fastapi uvicorn redis rq google-cloud-storage
COPY . /app
ENV PORT=8080
EXPOSE 8080
# Bind to Cloud Run-provided $PORT (default 8080 locally)
CMD ["sh", "-c", "uvicorn apps.api.main:app --host 0.0.0.0 --port ${PORT:-8080}"]
